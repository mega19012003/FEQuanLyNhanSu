<Window x:Class="FEQuanLyNhanSu.Screens.Configs.LogStatusConfig.UpdateLogStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEQuanLyNhanSu.Screens.Configs.LogStatusConfig"
        mc:Ignorable="d"
        Title="UpdateLogStatus" Height="350" Width="530">
    <Grid Background="#FFCCE2F1" Margin="0,0,0,-6">
        <Label x:Name="lblCreateUser"
       Content="Cập nhật Log status"
       FontSize="20"
       HorizontalAlignment="Center"
       VerticalAlignment="Top"
       Margin="0,20,0,0" />

        <Grid Margin="40,80,40,20" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Label | Input -->

            <TextBox Grid.Row="0" Grid.Column="0" Text="Name" IsReadOnly="True" 
             Background="#FF99C5E3" Foreground="White" FontSize="15"
             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
             Height="41" Margin="0,5" FontWeight="Heavy"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName"
             FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center" IsReadOnly="True"/>

            <TextBox Grid.Row="1" Grid.Column="0" Text="Multiply" IsReadOnly="True" 
             Background="#FF99C5E3" Foreground="White" FontSize="15"
             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
             Height="41" Margin="0,5" FontWeight="Heavy"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtMultiply"
            FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center"/>

            <TextBox Grid.Row="2" Grid.Column="0" Text="Note" IsReadOnly="True" 
            Background="#FF99C5E3" Foreground="White" FontSize="15"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
            Height="41" Margin="0,5" FontWeight="Heavy"/>

            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtNote"
            FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnExit" Content="Thoát" Width="150" Height="41"
                Margin="10,0" FontSize="15" Click="btnExit_Click"/>

                <Button x:Name="btnUpdate" Content="Cập nhật Log status" Width="170" Height="41"
                Margin="10,0" FontSize="15" Background="#FF66A8D5"
                Foreground="White" FontWeight="Bold" Click="btnUpdate_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
