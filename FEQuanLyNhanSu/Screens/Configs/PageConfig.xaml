<Page x:Class="FEQuanLyNhanSu.PageConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FEQuanLyNhanSu"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageConfig">

    <Grid Background="White" Margin="0,-3,0,-164">
        <TextBlock Text="Đây là trang cấu hình" FontSize="24" HorizontalAlignment="Center" Padding="0,20,0,0" VerticalAlignment="Top"/>

        <TabControl Margin="10,70,10,0" VerticalAlignment="Top" Height="466">
            <!--///////////////////////////////////////////////////////////////-->
            <TabItem Header="Allowed IP">
                <Grid Background="White">
                    <StackPanel Margin="10,90,10,10" VerticalAlignment="Top"/>
                    <DataGrid x:Name="IPDtaGrid" Margin="10,60,10,55" FontSize="15" ColumnWidth="*" IsReadOnly="True" VerticalContentAlignment="Center">
                        <DataGrid.Columns>

                            <DataGridTemplateColumn Header="Hành động">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!--<Button Content="Sửa" Margin="2" Padding="5,2"/>-->
                                            <Button x:Name="btnDeleteIP" Content="Xóa" Margin="2" Padding="5,2" Click="btnDeleteIP_Click" Tag="{Binding AllowedIPId}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="AddIPBtn" Content="Thêm IP" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0"
                    VerticalAlignment="Top" Width="150" FontSize="16"
                    Background="#FF66A8D5" Foreground="White" FontWeight="Bold" Click="AddIPBtn_Click"/>
                    <Grid HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" Width="284" Height="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!-- Cột cho icon -->
                            <ColumnDefinition Width="*" />
                            <!-- Cột cho TextBox -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />

                        <TextBox x:Name="SearchIP" FontSize="15" VerticalContentAlignment="Center" BorderThickness="1" Padding="5,0" Grid.Column="1" />
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Margin="0,0,0,8" HorizontalAlignment="Center">
                        <Button x:Name="btnPrevPageIP" Content="◁" HorizontalAlignment="Left" Height="34" Margin="0,0,230,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnPrevPageIP_Click"/>
                        <Button x:Name="btnNextPageIP" Content="▷" HorizontalAlignment="Right" Height="34" Margin="230,0,0,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnNextPageIP_Click"/>
                        <Label x:Name="txtPageIP" Content="1" HorizontalAlignment="Center" Height="34" Width="34" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
                    </Grid>
                </Grid>
            </TabItem>
            <!--///////////////////////////////////////////////////////////////-->
            <!-- Tab 2: Checkin Status Config -->
            <TabItem Header="Trạng thái Checkin">
                <Grid Background="White">
                    <StackPanel Margin="10,90,10,10" VerticalAlignment="Top"/>
                    <DataGrid x:Name="ChknDtaGrid" Margin="10,60,10,10" FontSize="15"  ColumnWidth="*" IsReadOnly="True" VerticalContentAlignment="Center">
                        <DataGrid.Columns>

                            <DataGridTemplateColumn Header="Hành động">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button x:Name="btnUpdateLogStatus" Content="Sửa" Margin="2" Padding="5,2" Click="btnUpdateStatus_Click" Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!--///////////////////////////////////////////////////////////////-->
            <!-- Tab 3: Ngày nghỉ lễ -->
            <TabItem Header="Ngày nghỉ lễ">
                <Grid Background="White">
                    <Button x:Name="AddHolidayBtn" Content="Thêm ngày nghỉ lễ"
                      HorizontalAlignment="Left" Height="35" Margin="10,10,0,0"
                      VerticalAlignment="Top" Width="150" FontSize="16"
                      Background="#FF66A8D5" Foreground="White" Click="AddHolidayBtn_Click"/>

                    <DataGrid x:Name="HolidayDtaGrid" Margin="10,60,10,55" FontSize="15"  ColumnWidth="*" IsReadOnly="True" VerticalContentAlignment="Center">
                        <DataGrid.Columns>

                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" Margin="2" Padding="5,2" Click="btnUpdateHoliday_Click" Tag="{Binding HolidayId}"/>
                                            <Button Content="Xóa" Margin="2" Padding="5,2" Click="btnDeleteHoliday_Click" Tag="{Binding HolidayId}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" Width="284" Height="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!-- Cột cho icon -->
                            <ColumnDefinition Width="*" />
                            <!-- Cột cho TextBox -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />

                        <TextBox x:Name="SearchHoliday" FontSize="15" VerticalContentAlignment="Center" BorderThickness="1" Padding="5,0" Grid.Column="1" />
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Margin="0,0,0,8" HorizontalAlignment="Center">
                        <Button x:Name="btnPrevPageHoliday" Content="◁" HorizontalAlignment="Left" Height="34" Margin="0,0,230,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnPrevPageHoliday_Click"/>
                        <Button x:Name="btnNextPageHoliday" Content="▷" HorizontalAlignment="Right" Height="34" Margin="230,0,0,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnNextPageHoliday_Click"/>
                        <Label x:Name="txtPageHoliday" Content="1" HorizontalAlignment="Center" Height="34" Width="34" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
                    </Grid>
                </Grid>
            </TabItem>
            <!--///////////////////////////////////////////////////////////////-->
            <TabItem Header="Thời gian làm việc">
                <Grid Background="White" Height="363">
                    <Grid Width="736" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- khoảng cách giữa Button và TextBox -->
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Dòng 1 -->
                        <Button Content="Sửa thời gian bắt đầu ca làm việc sáng" Width="300" Height="40" Grid.Row="0" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtStartTimeMorning" Width="200" Height="40" Grid.Row="0" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <xctk:TimePicker x:Name="txtInputStartTime" Width="200" Height="40" Grid.Row="0" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                        <!-- Dòng 2 -->
                        <Button Content="Sửa thời gian kết thúc ca làm việc sáng" Width="300" Height="40" Grid.Row="1" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtEndTimeMorning" Width="200" Height="40" Grid.Row="1" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <xctk:TimePicker x:Name="txtInputStartTimeMorning" Width="200" Height="40" Grid.Row="1" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                        <!-- Dòng 3 -->
                        <Button Content="Sửa thời gian cho phép checkin/checkout" Width="300" Height="40" Grid.Row="2" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtAllowTime" Width="200" Height="40" Grid.Row="2" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <TextBox x:Name="txtInputAllowTime" Width="200" Height="40" Grid.Row="2" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                        <!-- Dòng 4 -->
                        <Button Content="Sửa thời gian cho phép trễ" Width="300" Height="40" Grid.Row="3" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtLateTime" Width="200" Height="40" Grid.Row="3" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <TextBox x:Name="txtInputLateTime" Width="200" Height="40" Grid.Row="3" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                        <!-- Dòng 5 -->
                        <Button Content="Sửa thời gian bắt đầu ca làm việc" Width="300" Height="40" Grid.Row="4" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtStartTimeAfternoon" Width="200" Height="40" Grid.Row="4" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <xctk:TimePicker x:Name="txtInputStartTimeAfternoon" Width="200" Height="40" Grid.Row="4" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                        <!-- Dòng 6 -->
                        <Button Content="Sửa thời gian kết thúc ca làm việc" Width="300" Height="40" Grid.Row="5" Grid.Column="0" Margin="0,10,0,10" FontSize="15" Background="#FF66A8D5" Foreground="White"/>
                        <TextBox x:Name="txtEndTimeAfternoon" Width="200" Height="40" Grid.Row="5" Grid.Column="2" Margin="0,10,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" FontSize="15"/>
                        <xctk:TimePicker x:Name="txtInputEndTimeAfternoon" Width="200" Height="40" Grid.Row="5" Grid.Column="3" Margin="16,10,-216,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15"/>

                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Page>
