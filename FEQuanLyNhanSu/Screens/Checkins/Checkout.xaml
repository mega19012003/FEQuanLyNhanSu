<Window x:Class="FEQuanLyNhanSu.Screens.Checkins.Checkout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEQuanLyNhanSu.Screens.Checkins"
        mc:Ignorable="d"
        Title="Checkout" Height="550" Width="800">
    <Grid Background="#FFCCE2F1">
        <Label x:Name="lblCreateUser" Content="Checkout" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,20" />

        <!-- FORM INPUT -->
        <Grid Margin="40,80,40,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="lblName" Grid.Row="0" Grid.Column="0" Text="Nhân viên" IsReadOnly="True"
                 Background="#FF99C5E3" Foreground="White" FontSize="15"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 Height="41" Margin="0,5"/>
            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbEmployee"
                  FontSize="15" Height="41" Margin="0,5" Padding="10,0"
                  IsEditable="True"
                  StaysOpenOnEdit="True"
                  IsTextSearchEnabled="False"
                  KeyUp="cbEmployee_KeyUp"
                  SelectedValuePath="UserId"
                  VerticalContentAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image  Width="30" Height="30" Margin="0,0,8,0" >
                                <Image.Source>
                                    <Binding Path="ImageUrl" 
            TargetNullValue="pack://application:,,,/Assets/none.jpg"
            FallbackValue="pack://application:,,,/Assets/user.png"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="{Binding Fullname}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <ComboBox x:Name="cbDepartment"          
                        Width="200" Height="41" Margin="5,0"
                        FontSize="15" Padding="10,0"
                        IsEditable="True"
                        StaysOpenOnEdit="True"
                        IsTextSearchEnabled="False"
                        KeyUp="cbDepartment_KeyUp"
                        DisplayMemberPath="Name"
                        SelectedValuePath="departmentId" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" SelectionChanged="cbDepartment_SelectionChanged" Text="Nhập tên phòng ban"/>

                <ComboBox x:Name="cbPosition"          
                          Width="200" Height="41" Margin="5,0"
                          FontSize="15" Padding="10,0"
                          IsEditable="True"
                          StaysOpenOnEdit="True"
                          IsTextSearchEnabled="False"
                          KeyUp="cbPosition_KeyUp"
                          DisplayMemberPath="Name"
                          SelectedValuePath="positionId" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" SelectionChanged="cbPosition_SelectionChanged" Text="Nhập tên chức vụ"/>
            </StackPanel>

            <TextBox x:Name="lblNote" Grid.Row="2" Grid.Column="0" Text="Ghi chú" IsReadOnly="True"
                Background="#FF99C5E3" Foreground="White" FontSize="15"
                VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                Height="41" Margin="0,5"/>
            <TextBox x:Name="txtNote" Grid.Row="2" Grid.Column="1" FontSize="15" Height="41" Margin="0,5" VerticalContentAlignment="Center"/>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnCreate" Content="Checkout" Width="170" Height="41"
                Margin="10,0" FontSize="15" Background="#FF66A8D5"
                Foreground="White" FontWeight="Bold" Click="btnCreate_Click"/>
            </StackPanel>
        </Grid>

        <Grid Margin="150,320,100,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions>

            <!--Label Left-->
            <Label Grid.Row="0" Grid.Column="0" Content="Thời gian checkin" FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Thời gian checkout" FontSize="15"/>
            <Label Grid.Row="2" Grid.Column="0" Content="LogStatus" FontSize="15"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Ghi chú" FontSize="15"/>
            <!--Content Left-->
            <Label Grid.Row="0" Grid.Column="2" x:Name="lblCheckinMor" Content="....." FontSize="15"/>
            <Label x:Name="lblCheckoutMor" Grid.Row="1" Grid.Column="2" Content="....." FontSize="15"/>
            <Label x:Name="lblCheckinAft" Grid.Row="2" Grid.Column="2" Content="....." FontSize="15"/>
            <Label x:Name="lblNoteResult" Grid.Row="3" Grid.Column="2" Content="....." FontSize="15"/>


            <!--Middle-->
            <Label Grid.Row="0" Grid.Column="1" Content=":" FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="1" Content=":" FontSize="15"/>
            <Label Grid.Row="2" Grid.Column="1" Content=":" FontSize="15"/>
            <Label Grid.Row="3" Grid.Column="1" Content=":" FontSize="15"/>


            <StackPanel Grid.Row="4" Grid.ColumnSpan="6" Orientation="Horizontal"
                HorizontalAlignment="Center" Margin="0,20,0,20">
                <Button x:Name="btnExit" Content="Thoát" Width="150" Height="41"
                Margin="10,0" FontSize="15" Click="btnExit_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
