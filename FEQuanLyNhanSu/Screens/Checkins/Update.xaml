<Window x:Class="FEQuanLyNhanSu.Screens.Checkins.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEQuanLyNhanSu.Screens.Checkins"
        xmlns:c="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Update" Height="400" Width="800">
    <Grid Background="#FFCCE2F1">
        <Label x:Name="lblCreateUser"
           Content="Cập nhật checkin người dùng"
           FontSize="20"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,20,0,10" />

        <Grid Margin="40,80,40,0" VerticalAlignment="Top" Height="304">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Input -->
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="0" Grid.Column="0" Text="Họ tên" IsReadOnly="True" 
                     Background="#FF99C5E3" Foreground="White" FontSize="15"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     Height="41" Margin="0,5" FontWeight="Heavy"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFullname"
                     FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center" IsReadOnly="True"/>

            <TextBox Grid.Row="1" Grid.Column="0" Text="Thời gian checkin" IsReadOnly="True" 
                 Background="#FF99C5E3" Foreground="White" FontSize="15"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 Height="41" Margin="0,5" FontWeight="Heavy"/>
            <c:DateTimePicker Grid.Row="1" Grid.Column="1" x:Name="dtpCheckinTime"
                 FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center"/>

            <TextBox Grid.Row="2" Grid.Column="0" Text="Thời gian checkout" IsReadOnly="True" 
                 Background="#FF99C5E3" Foreground="White" FontSize="15"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 Height="41" Margin="0,5" FontWeight="Heavy"/>
            <c:DateTimePicker Grid.Row="2" Grid.Column="1" x:Name="dtpCheckoutTime"
                 FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center"/>

            <TextBox Grid.Row="3" Grid.Column="0" Text="Chi chú" IsReadOnly="True" 
                 Background="#FF99C5E3" Foreground="White" FontSize="15"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 Height="41" Margin="0,5" FontWeight="Heavy"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtNote"
                 FontSize="15" Height="41" Margin="0,5" Padding="10,0" VerticalContentAlignment="Center"/>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnExit" Content="Thoát" Width="150" Height="41"
                    Margin="10,0" FontSize="15" Click="btnExit_Click"/>

                <Button x:Name="btnUpdate" Content="Cập nhật user" Width="150" Height="41"
                    Margin="10,0" FontSize="15" Background="#FF66A8D5"
                    Foreground="White" FontWeight="Bold" Click="btnUpdate_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
