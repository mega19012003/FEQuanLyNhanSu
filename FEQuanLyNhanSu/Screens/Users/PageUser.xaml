<Page x:Class="FEQuanLyNhanSu.PageUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FEQuanLyNhanSu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White" Margin="0,-3,0,0">
        <TextBlock Text="Trang quản lý người dùng"
             FontSize="24"
             HorizontalAlignment="Center" Padding="0,20,0,0" VerticalAlignment="Top"/>
        <StackPanel Margin="10,90,10,10" VerticalAlignment="Top"/>
        <DataGrid x:Name="UserDtaGrid" RowHeight="60" Margin="20,100,20,50" FontSize="15" IsReadOnly="True" ColumnWidth="*" VerticalContentAlignment="Center" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Hành động" Width="170">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Sửa" Background="#FF66A8D5" Foreground="White" Margin="2" Padding="5,2" Click="btnUpdate_Click" Tag="{Binding UserId}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                                <Button Content="Xóa" Background="#FFFF5E5E" Foreground="White" Margin="2" Padding="5,2" Click="btnDelete_Click" Tag="{Binding UserId}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                                <Button Content="Reset Pass" Background="White" Foreground="Black" Margin="2" Padding="5,2" Click="btnResetPass_Click" Tag="{Binding UserId}" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Ảnh" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="60" Height="60" Stretch="UniformToFill">
                                <Image.Source>
                                    <Binding Path="ImageUrl" 
                                     TargetNullValue="pack://application:,,,/Assets/none.jpg"
                                     FallbackValue="pack://application:,,,/Assets/user.png"/>
                                </Image.Source>
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding Fullname}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Role" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RoleName}" Padding="5,0" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RoleName}" Value="AdminSystem">
                                                <Setter Property="Foreground" Value="#FFE44149"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RoleName}" Value="Administrator">
                                                <Setter Property="Foreground" Value="#FF3D37FF"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RoleName}" Value="Manager">
                                                <Setter Property="Foreground" Value="#FFC37323"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RoleName}" Value="Employee">
                                                <Setter Property="Foreground" Value="#FF3D985B"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <!--<DataGridTextColumn x:Name="HeaderCompany" Header="Công ty" Binding="{Binding CompanyName}" Width="*" />
                <DataGridTextColumn x:Name="HeaderDepartment" Header="Phòng ban" Binding="{Binding DepartmentName}" Width="*" />
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding PositionName}" Width="*" />-->
                <DataGridTextColumn Header="Công việc đã xong trong tháng" Binding="{Binding CompletedDuties}" Width="Auto" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Công việc chưa xong" Binding="{Binding InProgressDuties}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Còn hoạt động" Binding="{Binding IsActive}" Width="Auto">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="IsEnabled" Value="False"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddUserBtn" Content="Thêm người dùng" HorizontalAlignment="Left" Height="35" Margin="20,59,0,0" VerticalAlignment="Top" Width="190" FontSize="20" Background="#FF66A8D5" Foreground="White" Click="CreateUser" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Right" Margin="0,60,20,0" VerticalAlignment="Top" Width="250" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Cột cho icon -->
                <ColumnDefinition Width="*" />
                <!-- Cột cho TextBox -->
            </Grid.ColumnDefinitions>

            <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />

            <TextBox x:Name="txtSearch" FontSize="15" VerticalContentAlignment="Center" BorderThickness="1" Padding="5,0" Grid.Column="1" TextChanged="txtSearch_TextChanged" />
        </Grid>
        <Grid VerticalAlignment="Bottom" Margin="0,0,0,8" HorizontalAlignment="Center">
            <Button x:Name="btnPrevPage" Content="◁" HorizontalAlignment="Left" Height="34" Margin="0,0,230,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnPrevPage_Click"/>
            <Button x:Name="btnNextPage" Content="▷" HorizontalAlignment="Right" Height="34" Margin="230,0,0,0" VerticalAlignment="Bottom" Width="96" Background="#FF66A8D5" Foreground="White" Click="btnNextPage_Click"/>
            <Label x:Name="txtPage" Content="1" HorizontalAlignment="Center" Height="34" Width="34" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,56,0,0" >
            <ComboBox x:Name="cbCompany"          
               Width="200" Height="41" Margin="5,0"
               FontSize="15" Padding="10,0"
               IsEditable="True"
               StaysOpenOnEdit="True"
               IsTextSearchEnabled="False"
               KeyUp="cbCompany_KeyUp"
               DisplayMemberPath="Name"
               SelectedValuePath="CompanyId" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" SelectionChanged="cbCompany_SelectionChanged" Text="Nhập tên công ty"/>

            <ComboBox x:Name="cbDepartment"          
                Width="200" Height="41" Margin="5,0"
                FontSize="15" Padding="10,0"
                IsEditable="True"
                StaysOpenOnEdit="True"
                IsTextSearchEnabled="False"
                KeyUp="cbDepartment_KeyUp"
                DisplayMemberPath="Name"
                SelectedValuePath="departmentId" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" SelectionChanged="cbDepartment_SelectionChanged" Text="Nhập tên phòng ban"/>

            <ComboBox x:Name="cbPosition"          
                  Width="200" Height="41" Margin="5,0"
                  FontSize="15" Padding="10,0"
                  IsEditable="True"
                  StaysOpenOnEdit="True"
                  IsTextSearchEnabled="False"
                  KeyUp="cbPosition_KeyUp"
                  DisplayMemberPath="Name"
                  SelectedValuePath="positionId" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" SelectionChanged="cbPosition_SelectionChanged" Text="Nhập tên chức vụ"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="25,0,0,0">
                <TextBlock Text="Tháng:" VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                <ComboBox x:Name="cbMonth" HorizontalAlignment="Left" Margin="0,3.5,0,0" VerticalAlignment="Top" Width="55" Height="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="cbMonth_SelectionChanged"/>
                <ComboBox x:Name="cbIsActive" HorizontalAlignment="Center" Margin="0,3.5,0,0" VerticalAlignment="Top" Width="150" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="cbIsActive_SelectionChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
